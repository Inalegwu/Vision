{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@components": ["src/web/components/index.ts"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/web/routes/*"],
      "@core/*": ["src/shared/core/*"]
    },
    "plugins": [
      {
        "name": "@effect/language-service",
        "diagnostics":true,
        "quickinfo":true,
        "completions":true,
        "refactors":true
      }
    ]
  },
  "include": ["src"],
}
