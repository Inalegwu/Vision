{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "error",
        "noNonNullAssertion": "warn"
      },
      "a11y": {
        "useButtonType": "off",
        "useKeyWithClickEvents":"off"
      },
      "suspicious":{
        "noShadowRestrictedNames":"off"
      },
      "complexity":{
        "noForEach":"off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "lineEnding": "crlf",
    "indentStyle": "space",
    "indentWidth": 2
  }
}
